{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/Paris",
  "schedule": [
    "before 8am on monday"
  ],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "groupName": "all dependencies",
  "groupSlug": "all-dependencies",
  "packageRules": [
    {
      "groupName": "all dependencies",
      "automerge": true,
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
