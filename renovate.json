{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "timezone": "Europe/Paris",
  "schedule": ["before 8am on monday"],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "groupName": "all dependencies",
  "groupSlug": "all-dependencies",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "all dependencies",
      "automerge": true
    }
  ]
}